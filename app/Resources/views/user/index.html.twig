{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>       
                </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
             <td>{{ user.username }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.email }}</td>            
            </tr>
        {% endfor %}
        </tbody>
    </table>    
{% endblock %}
